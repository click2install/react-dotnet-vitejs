<!doctype html>
@using System.Text
@{
  var user = new Models.User { Id = 1, Email = "user@example.com" };

  var userData = Convert.ToBase64String(Encoding.ASCII.GetBytes(Json.Serialize(user).ToString()));
}
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <title>ReactDotnetViteJS - @ViewData["Title"]</title>
  <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" />
  <environment names="Staging,Production">
    <link rel="stylesheet" asp-href-include="~/dist/assets/main.*.css" />
  </environment>
</head>

<body data-id='@userData'>
  @await Html.PartialAsync("_Header")
  <main role="main" class="container">
    <h2 class="mt-3 mb-3">@ViewData["Title"]</h2>
    @RenderBody()
  </main>

  <environment names="Development">
    <script type="module" src="~/dist/src/main.js"></script>
  </environment>
  <environment names="Staging,Production">
  </environment>

  @RenderSection("scripts", false)

</body>

</html>
